# Load env
with-contenv

# Get ACCEPT_EULA env variable value [true/false]
importas -D "" accept_eula ACCEPT_EULA

# If accept_eula is true
ifelse { s6-test "${accept_eula}" = "true" }
{
    # Get DATA_DIR env variable
    importas -D "" data_dir DATA_DIR

    # If data_dir is not null
    if { s6-test -n "${data_dir}" }

    # Set eula=true in data directory
    foreground { s6-echo "mc-accept-eula: info: setting eula=true\n" }
    redirfd -w 1 "${data_dir}/eula.txt" s6-echo "eula=true"
}
